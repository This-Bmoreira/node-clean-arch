{
  "compilerOptions": {
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "strictBindCallApply": true,
    "incremental": true,

    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "rootDir": ".",
    "module": "ES2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "target": "ES2021",
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@test/*": [
        "test/*"
      ]
    }
  },
  "exclude": [
    "exemplo",
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts",
    "**/*unit-test",
    "**/*init-test",
    "**/*e2e-test"
  ]
}